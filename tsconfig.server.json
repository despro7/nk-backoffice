{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist",
    "lib": ["ES2022"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist", "client"]
}